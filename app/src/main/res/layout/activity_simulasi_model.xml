<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SimulasiModelActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="236dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/Theme.AppCompat.Dialog"
            app:title="Model Simulation"
            app:titleCentered="true"
            app:titleTextColor="@color/black" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/Age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age ( 4 - 90 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gender ( Male 0 - Female 1 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/TB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TB ( 0.4 - 75 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/DB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DB ( 0.1 - 19.7 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Alkphos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alkphos ( 63 - 2110 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Sgpt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sgpt ( 10 - 2000 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Sgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sgot ( 10 - 4929 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/TP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="TP ( 2.7 - 96 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ALB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ALB ( 0.9 - 5.5 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/black"
                    android:text="Prediksi"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:cornerRadius="20dp" />

                <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
